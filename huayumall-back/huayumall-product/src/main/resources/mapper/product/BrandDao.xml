<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zzl.huayumall.product.dao.BrandDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.zzl.huayumall.product.entity.BrandEntity" id="brandMap">
        <result property="brandId" column="brand_id"/>
        <result property="name" column="name"/>
        <result property="logo" column="logo"/>
        <result property="descript" column="descript"/>
        <result property="showStatus" column="show_status"/>
        <result property="firstLetter" column="first_letter"/>
        <result property="sort" column="sort"/>
    </resultMap>

    <insert id="addBrandEntity" parameterType="com.zzl.huayumall.product.entity.BrandEntity">
        insert into pms_brand(name ,logo)values(#{name},#{logo});
    </insert>
    <update id="updateStatusById" parameterType="com.zzl.huayumall.product.entity.BrandEntity">
        update pms_brand
        <set>
            <if test="name !=null and name != ''">
                 name = #{name},
            </if>
            <if test="logo !=null and logo != ''">
                 logo = #{logo},
            </if>
            <if test="descript !=null and descript != ''">
                 descript = #{descript},
            </if>
            <if test="showStatus !=null">
                 show_status = #{showStatus},
            </if>
            <if test="firstLetter !=null and firstLetter != ''">
                 first_letter = #{firstLetter},
            </if>
            <if test="sort !=null and sort != ''">
                 sort = #{sort}
            </if>
        </set>
        where brand_id = #{brandId}
    </update>
</mapper>
